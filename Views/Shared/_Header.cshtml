<ul class="c-header-nav mfs-auto">
    <li class="c-header-nav-item px-3 c-d-legacy-none">
        <button class="c-class-toggler c-header-nav-btn" type="button" id="header-tooltip" data-target="body" data-class="c-dark-theme" data-toggle="c-tooltip" data-placement="bottom" title="Toggle Light/Dark Mode">
            <i class="c-icon c-d-dark-none cil-moon"></i>
            <i class="c-icon c-d-default-none cil-sun"></i>
        </button>
    </li>
</ul>
<ul class="c-header-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="c-header-nav-item dropdown d-md-down-none mx-2">
            <a class="c-header-nav-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                <i class="c-icon cil-bell"></i><span class="badge badge-pill badge-danger">5</span>
            </a>
            @*Notifications*@
            <div class="dropdown-menu dropdown-menu-right dropdown-menu-lg pt-0">
                <partial name="_HeaderNotifications">
            </div>
        </li>
        <li class="c-header-nav-item dropdown">
            <a class="c-header-nav-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                @User.Identity.Name
            </a>
            <div class="dropdown-menu dropdown-menu-right pt-0">

                <div class="dropdown-header bg-light py-2"><strong>Settings</strong></div>
                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                    <i class="c-icon mfe-2 cil-user"></i> Profile
                </a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout">
                    <i class="c-icon mfe-2 cil-account-logout"></i> Logout
                </a>
            </div>
        </li>

        <li class="c-header-toggler c-class-toggler mfe-md-3 btn btn-ghost-secondary" type="button" data-target="#aside" data-class="c-sidebar-show">
            <i class="c-icon c-icon-lg cil-applications-settings"></i>
        </li>
    }
    else
    {
        <li class="c-header-nav-item">
            <a class="c-header-nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="c-header-nav-item">
            <a class="c-header-nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }


</ul>

